@model CampingSpot
@{
    ViewData["Title"] = "Edit Camping Spot";
}

<h1>Edit Camping Spot</h1>
<!-- remember to delete this -->
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Latitude"></label>
        <input asp-for="Latitude" class="form-control" />
        <span asp-validation-for="Latitude" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Longitude"></label>
        <input asp-for="Longitude" class="form-control" />
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Current Photo</label>
        @if (Model.Photo != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)"
                 class="img-thumbnail" style="max-height: 200px;" />
        }
        else
        {
            <p>No photo uploaded</p>
        }
    </div>
    <div class="form-group">
        <label for="photo">New Photo (max 2MB)</label>
        <input type="file" name="photo" class="form-control-file" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>